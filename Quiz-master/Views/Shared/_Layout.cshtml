@using Microsoft.AspNetCore.Mvc
@{
    string nom = "";
    if (!Context.Request.Path.Equals("/") && !Context.Request.Path.Equals("/User") && !Context.Request.Path.Equals("/Home/Index") && !Context.Request.Path.Equals("/User/Index") && !Context.Request.Path.Equals("/User/Registrer"))
    { nom = ViewBag.name; }

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuizApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Quiz.styles.css" asp-append-version="true" />
    <link href="path/to/font-awesome/css/all.min.css" rel="stylesheet" />

    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    <script src="~/js/signalr.js"></script>
    <style>.LogOutBtn{text-decoration:none;
            color: rgb(255, 0, 0) !important;
            margin-left:10px;
    margin-right:10px;
    font-weight:600;
    }

            .LogOutBtn:hover {
                color: rgb(179, 0, 0) !important;
            }
            .tt{color:gainsboro;}
            .tt:hover{color:gray;}

        header {
            position: sticky;
            top: 0;
            z-index: 1000;
        }
    </style>
    
    
    @RenderSection("CustomStyles", required: false)
</head>
<body>

    
    @if (!Context.Request.Path.Equals("/") && !Context.Request.Path.Equals("/User") && !Context.Request.Path.Equals("/Home/Index") && !Context.Request.Path.Equals("/User/Index") && !Context.Request.Path.Equals("/User/Registrer"))
    {
        <header >
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Quiz" asp-action="Index"><b>QuizApp</b></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                           
                            <li class="nav-item">
                                <a class="nav-link tt " asp-area="" asp-controller="Quiz" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link tt " asp-controller="Quiz" asp-action="MyQuizzes">My Quizzes</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link tt " asp-controller="Quiz" asp-action="Quizzes"> All Quizzes</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link tt " asp-controller="Quiz" asp-action="RejoindreQuiz">Join a Quiz</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link tt " asp-controller="Quiz" asp-action="PassedQuizzes">List of passed quizzes</a>

                            </li>

                        </ul>
                        <div>
                            <b>@nom </b>
                            <a asp-controller="User" asp-action="Logout" class="LogOutBtn">LogOut</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        
    }
  

    
 
            @RenderBody()
     

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/signalr.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  
</body>
</html>
