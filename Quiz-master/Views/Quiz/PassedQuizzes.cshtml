@{
    List<StartedQuizTeacher> ListStartedQuizTeacher = ViewBag.ListStartedQuizTeacher;
  
}
@section CustomStyles{<style>

                              body {
                                  background-color: ghostwhite;
                              }

                              .shc {
                                  background-color: rgb(116, 40, 188) !important;
                              }
                              .btnDelete{

                                  border : none;
                                  outline :none;
                                  color:red;
                                  background-color : transparent;
                                font-weight:bold;
                              }

                              .Adelete{text-decoration:none;
                                  color: red; 
                              }

                              .titre {
                                  display: flex;
                                  margin-top: 40px;
                                  justify-content: space-around;
                                  font-size: 25px;
                                  color: rgb(116, 40, 188);
                              }
</style>

}

<div class="container bgk">
    <div class="titre"><b>List of passed quizzes</b></div>
    <div class="row">
        @foreach (var i in ListStartedQuizTeacher)
        {
            <div class="modal fade" id="LL_@i.CodeQuiz" tabindex="-1" aria-labelledby="@i.CodeQuiz" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="@i.CodeQuiz">@i.Quiz.QuizName</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <p><b>Duration :</b> <i>  @i.Quiz.DurationMinutes min</i>  </p>
                            <p><b>Number of Students  :</b> <i>  @i.StartedQuizStudents.Count Student</i>  </p>
                            <p><b>Number of Questions  :</b> <i>  @i.Quiz.NbrQuestion Question</i>  </p>
                            <p> <b>Description  :</b> <i>@i.Quiz.Description</i>.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 mt-4">
                <div class="card text-center">
                    <div class="card-header d-flex justify-content-end">
                        <a class="Adelete" asp-action="DeletePassedQuiz" asp-route-id="@i.IdStartedQuizTeacher" class="btnDelete"> X </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@i.Quiz.QuizName</h5>
                        <p class="card-text">@i.Quiz.Description</p>
                        <a asp-action="ListPassedStudent" asp-route-idStartedQuiz="@i.IdStartedQuizTeacher" class="btn shc btn-primary">Show List Students</a>
                        
                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#LL_@i.CodeQuiz">
                            Info
                        </button>
                    </div>
                    <div class="card-footer text-muted">
                        @i.DateCreation
                    </div>
                </div>
            </div>
        }
    </div>
</div>
