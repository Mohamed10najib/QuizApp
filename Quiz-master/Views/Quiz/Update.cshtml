@inject IHttpContextAccessor context;
@using Newtonsoft.Json
@model Quiz

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var currentUser = context.HttpContext.Session.GetString("currentUser");
    User obj = JsonConvert.DeserializeObject<User>(currentUser);



}
<p>Hey mr @obj.UserId , @obj.Username , @obj.Password </p>
<form method="post" asp-action="SaveUpdate">
    <div class="mb-3">
        <label asp-for="QuizName" class="form-label">Quiz Name</label>
        <input asp-for="QuizName" type="text" class="form-control" id="QuizName">
        <span asp-validation-for="QuizName" class="text-danger">entrer vottre QuizName</span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" type="text" class="form-control" id="Description">
        <span asp-validation-for="Description" class="text-danger">entrer vottre Description</span>
    </div>
    <div class="mb-3">
        <label asp-for="DurationMinutes" class="form-label">DurationMinutes</label>
        <input asp-for="DurationMinutes" type="number" class="form-control" id="DurationMinutes">
        <span asp-validation-for="DurationMinutes" class="text-danger">entrer vottre DurationMinutes</span>
    </div>
    <div class="mb-3">
        <label asp-for="NbrQuestion" class="form-label">NbrQuestion</label>
        <input asp-for="NbrQuestion" type="number" class="form-control" id="NbrQuestion">
        <span asp-validation-for="NbrQuestion" class="text-danger">entrer vottre NbrQuestion</span>
    </div>







    <button type="submit" class="btn btn-primary">Submit</button>
</form>
